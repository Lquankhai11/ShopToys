@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var AccountID = HttpContextAccessor.HttpContext.Session.GetString("AccountID");
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
    var Role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    var isLoggedIn = !string.IsNullOrEmpty(username);
}
<header class="header bg-white">
    <div class="container px-lg-3">
        <nav class="navbar navbar-expand-lg navbar-light py-3 px-lg-0">
            <a class="navbar-brand" href="index.html"><span class="fw-bold text-uppercase text-dark">Men's Toys</span></a>
            <button class="navbar-toggler navbar-toggler-end" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <!-- Link--><a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <!-- Link--><a class="nav-link" asp-controller="Shop" asp-action="Shop">Shop</a>
                    </li>
                    <li class="nav-item">
                        <!-- Link--><a class="nav-link" asp-controller="Shop" asp-action="ProductDetail">Product detail</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="pagesDropdown" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pages</a>
                        <div class="dropdown-menu mt-3 shadow-sm" aria-labelledby="pagesDropdown"><a class="dropdown-item border-0 transition-link" href="index.html">Homepage</a><a class="dropdown-item border-0 transition-link" href="shop.html">Category</a><a class="dropdown-item border-0 transition-link" href="detail.html">Product detail</a><a class="dropdown-item border-0 transition-link" asp-controller="ShoppingCart" asp-action="Index">Shopping cart</a><a class="dropdown-item border-0 transition-link" href="checkout.html">Checkout</a></div>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (isLoggedIn)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="ShoppingCart" asp-action="Index" > <i class="fas fa-dolly-flatbed me-1 text-gray"></i>Cart<small class="text-gray fw-normal">(2)</small></a></li>
                        <li class="nav-item"><a class="nav-link" href="#!"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Your information</a></li>
                        if (Role.Equals("1") || Role.Equals("2") || Role.Equals("3"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Dashboard</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" href="#!"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Welcome @username</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Logout"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="ShoppingCart" asp-action="Index"> <i id="numberCart" class="fas fa-dolly-flatbed me-1 text-gray"></i>Cart </a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-route-id="@AccountID" asp-action="EditProfile"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Your information</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Accounts" asp-action="Login"> <i class="fas fa-user me-1 text-gray fw-normal"></i>Login</a></li>
                    }
                </ul>
            </div>
        </nav>
    </div>
</header>