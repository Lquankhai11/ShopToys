@model ShopToys.Models.Product

@{
	ViewData["Title"] = "AddNewProduct";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Add Product</h2>
					</div>
				</div>
				<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data" class="tm-edit-product-form">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="row tm-edit-product-row">
						<div class="col-xl-6 col-lg-6 col-md-12">
							<div class="form-group mb-3">
								<label for="name">
									Product Name
								</label>
								<input id="name"
									   asp-for="Name"
									   name="Name"
									   class="form-control"
									   required />
							</div>
							<div class="form-group mb-3">
								<label for="description">Description</label>
								<textarea class="form-control"
										  rows="3"
										  name="Description"
										  asp-for="Description"
										  required></textarea>
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
							<div class="form-group mb-3">
								<label for="category">Category</label>
								<select class="custom-select tm-select-accounts"
										id="CategoryId" asp-for="CategoryId" name="CategoryId" asp-items="ViewBag.Categories">
									<option value="" disabled>Choose category</option>
								</select>

							</div>
							<div class="row">
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Price">
										Price
									</label>
									<input id="Price"
										   name="Price"
										   asp-for="Price"
										   class="form-control"
										   data-large-mode="true" />
								</div>
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="QuantityInStock">
										Units In Stock
									</label>
									<input id="QuantityInStock"
										   name="QuantityInStock"
										   asp-for="QuantityInStock"
										   class="form-control"
										   required />
								</div>
							</div>
							<div class="row">
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Discount">
										Discount
									</label>
									<input id="Discount"
										   name="Discount"
										   asp-for="Discount"
										   class="form-control" />
								</div>
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Status">Status</label>
									<select asp-for="Status" class="custom-select tm-select-accounts"
											id="Status">
										<option disabled>Select Status</option>
										<option value="Available">Available</option>
										<option value="Unavailable">Unavailable</option>
									</select>
								</div>
							</div>
						</div>
						<div>
							<img id="image1Preview" width="200" />
							<input name="image" type="file" asp-for="Image" onchange="previewImage(this, $('#image1Preview'))" />
							<span asp-validation-for="Image" class="text-danger"></span>
						</div>
						<div>
							<img id="image2Preview" width="200" />
							<input name="image2" type="file" asp-for="Image2" onchange="previewImage(this, $('#image2Preview'))" />
							<span asp-validation-for="Image2" class="text-danger"></span>
						</div>
						<div>
							<img id="image3Preview" width="200" />
							<input name="image3" type="file" asp-for="Image3" onchange="previewImage(this, $('#image3Preview'))" />
							<span asp-validation-for="Image3" class="text-danger"></span>
						</div>
						<div>
							<img id="image4Preview" width="200" />
							<input name="image4" type="file" asp-for="Image4" onchange="previewImage(this, $('#image4Preview'))" />
							<span asp-validation-for="Image4" class="text-danger"></span>
						</div>
						<div class="col-12">
							<input type="submit" class="btn btn-primary btn-block text-uppercase" value="Create" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script>
		function previewImage(input, imgElement) {
			if (input.files && input.files[0]) {
				var reader = new FileReader();
				reader.onload = function (e) {
					imgElement.attr('src', e.target.result);
				};
				reader.readAsDataURL(input.files[0]);
			}
		}
	</script>
}