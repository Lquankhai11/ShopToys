@model ShopToys.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container tm-mt-big tm-mb-big">
	<div class="row">
		<div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
			<div class="tm-bg-primary-dark tm-block tm-block-h-auto">
				<div class="row">
					<div class="col-12">
						<h2 class="tm-block-title d-inline-block">Add Product</h2>
					</div>
				</div>

					<div class="row tm-edit-product-row">
						<div class="col-xl-6 col-lg-6 col-md-12">
							<div class="form-group mb-3">
								<label for="name">
									Product Name
								</label>
                            @Model.Name
							</div>
							<div class="form-group mb-3">
								<label for="description">Description</label>
                            @Model.Description
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
							<div class="form-group mb-3">
								<label for="category">Category</label>
                            @Model.Category.CategoryName
							</div>
							<div class="row">
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Price">
										Price
									</label>
                                @Model.Price
								</div>
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="stock">
										Units In Stock
									</label>
                                @Model.QuantityInStock
								</div>
							</div>
							<div class="row">
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Discount">
										Discount
									</label>
                                @Model.Discount
								</div>
								<div class="form-group mb-3 col-xs-12 col-sm-6">
									<label for="Status">Status</label>
                                @Model.Status
								</div>
							</div>
						</div>
						<div>
							<img id="image1Preview" width="200" src="~/images/Products/@Model.Image"/>
						</div>
						<div>
                        <img id="image2Preview" width="200" src="~/images/Products/@Model.Image2" />
						</div>
						<div>
                        <img id="image3Preview" width="200" src="~/images/Products/@Model.Image3" />
						</div>
						<div>
                        <img id="image4Preview" width="200" src="~/images/Products/@Model.Image4" />
						</div>
						<div class="col-12">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ProductId" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
							<a class="btn btn-danger" asp-action="Index">Back to List</a>
                        </form>
						</div>
					</div>
			</div>
		</div>
	</div>
</div>
