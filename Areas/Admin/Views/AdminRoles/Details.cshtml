@model ShopToys.Models.Role

@{
    ViewData["Title"] = "Role Information";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Role Information</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-6 col-lg-6 col-md-12">
                        <div class="form-group mb-3">
                            <table>
                                <tr>
                                    <td class="tm-block-title d-inline-block">ID:</td>
                                    <td class="tm-block-title d-inline-block">@Model.RoleId</td>
                                </tr>
                                <tr>
                                    <td class="tm-block-title d-inline-block">Name: </td>
                                    <td class="tm-block-title d-inline-block">@Model.RoleName</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
